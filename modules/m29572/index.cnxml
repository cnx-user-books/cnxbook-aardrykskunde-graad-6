    <para id="id6816831">Weerstasie van die kaartsleutel</para>
    <figure id="id12845511">
      <media id="id12845511_media" alt="">
        <image mime-type="image/png" src="../../media/Picture 10-4211.png" id="id12845511__onlineimage" height="107" width="285"/>
      </media>
